</div>

<div class="row border p-4 mt-3 rounded shadow"> 
    <div class="col bg-primary">col  1</div>
    <div class="col bg-success">col  2</div>
    <div class="col bg-warning">col  3</div>
</div>

<div class="border mt-3 p-5 rounded shadow"> 
    <h1>Este Ã© um texto editado com Bootstrap</h1>
</div>

@code {
    string texto = "BLAZOR PRO";
    string minhaClasse ="";
    string meuEstilo = "";
    void Change(){
        texto = "TEXTO ALTERADO COM SUCESSO!";
        minhaClasse = "text-center p-5";
        meuEstilo = "color: GREY; font-size: 6rem;";    
